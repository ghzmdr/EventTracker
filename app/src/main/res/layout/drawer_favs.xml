<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/drawer_item_home"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/fav_icon"
            android:src="@drawable/ic_action_favorite"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="8dp"
            />


        <ImageButton
            android:background="@null"
            android:id="@+id/btn_add_fav"
            android:src="@drawable/ic_action_fav_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/fav_icon"
            android:layout_alignBaseline="@id/btn_add_fav"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Luoghi"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/fav_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

    </ListView>

</LinearLayout>