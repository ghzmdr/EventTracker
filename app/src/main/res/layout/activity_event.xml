<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ghzmdr.eventtracker.EventActivity">


    <ImageView
        android:background="#FF7C05"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:weightSum="6"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:padding="4dp"
                        android:id="@+id/event_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:textColor="#282828"
                        android:text=""/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="4dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Data:"
                        android:textColor="#282828"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/event_date"
                        android:gravity="right|center_vertical"
                        android:padding="4dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:text="22 Novembre"
                        android:textColor="#282828"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="4dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="LocalitÃ :"
                        android:textColor="#282828"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/event_city"
                        android:gravity="right|center_vertical"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:text=""
                        android:textColor="#282828"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="4dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Indirizzo:"
                        android:textColor="#282828"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/event_address"
                        android:gravity="right|center_vertical"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:text=""
                        android:textColor="#282828"/>

                </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_alignParentLeft="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left|center_vertical"
                                android:padding="4dp"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:text="Inserito da:"
                                android:textColor="#282828"
                                android:layout_weight="2"/>

                            <TextView
                                android:layout_alignParentRight="true"
                                android:id="@+id/event_org"
                                android:gravity="right|center_vertical"
                                android:layout_weight="1"
                                android:padding="4dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="normal"
                                android:textSize="18sp"
                                android:text=""
                                android:textColor="#282828"/>

                        </RelativeLayout>
                </LinearLayout>

    </LinearLayout>
    </ScrollView>
    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/event_activity_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@null"
        app:theme="@style/ActivitiesTheme"
        android:minHeight="?attr/actionBarSize"/>

        <LinearLayout
            android:background="#fff"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Naviga"
                android:background="@null"
                android:id="@+id/btn_event_navigate"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:text="Salva"
                android:background="@null"
                android:id="@+id/btn_event_save"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
